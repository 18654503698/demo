<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--创建shirofilter实体类-->
    <bean id="shirofilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <property name="loginUrl" value="login.html"/>
        <property name="unauthorizedUrl" value="403.html"/><!--未认证的跳转页面-->
        <property name="filterChainDefinitions">
            <value><!--anon 不需要任何验证   authc  需要验证的   自上而下符号添加就跳出-->
                /login.html = anon
                /* = authc
            </value>
        </property>
    </bean>

    <!--创建securityManager 对象-->
   <bean id="securityManager" class="org.apache.shiro.mgt.DefaultSecurityManager">
        <property name="realm" ref="realm"></property>
    </bean>
   <!-- 创建自定义Realm对象-->
    <bean  class="com.xuexi.shiro.UserRealm" id="realm">
        <!--将加密方式设置到自定义Realm中-->
        <property name="cacheManager" ref="credentialsMatcher"></property>
    </bean>
    <!--加密管理器对象-->
    <bean class="org.apache.shiro.authc.credential.HashedCredentialsMatcher" id="credentialsMatcher">
        <property name="hashAlgorithmName" value="md5"></property>
        <property name="hashIterations" value="1"></property>
    </bean>
</beans>